<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="TeardropView" tools:ignore="ResourceName">
        <attr name="teardrop_color" format="color" />
        <attr name="teardrop_text_color" format="color" />
        <attr name="teardrop_text_size" format="integer" />
        <attr name="teardrop_text" format="string" />
        <!--尖角在圆的角度-->
        <attr name="teardrop_angle" format="integer" />
        <!--半径-->
        <attr name="teardrop_radius" format="dimension" />
        <!--尖角圆角-->
        <attr name="teardrop_corner" format="dimension" />
    </declare-styleable>
</resources>