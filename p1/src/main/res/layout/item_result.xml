<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:foreground="?attr/selectableItemBackground">

    <CheckBox
        android:id="@+id/result_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/result_name"
        style="@style/App.Fast.TextView.Normal.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="@dimen/dimenDef"
        android:paddingTop="@dimen/dimenDefSmall"
        android:paddingEnd="@dimen/dimenDef"
        app:layout_constraintEnd_toStartOf="@id/result_cb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CALL PHONE" />

    <TextView
        android:id="@+id/result_desc"
        style="@style/App.Fast.TextView.Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="@dimen/dimenDef"
        android:paddingEnd="@dimen/dimenDef"
        android:paddingBottom="@dimen/dimenDefSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/result_cb"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/result_name"
        app:layout_constraintTop_toBottomOf="@id/result_name"
        tools:text="Manifest.permission.CALL.PHONE(1+)" />
</androidx.constraintlayout.widget.ConstraintLayout>