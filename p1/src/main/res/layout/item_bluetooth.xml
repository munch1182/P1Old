<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="@dimen/dimenDef"
    android:paddingEnd="@dimen/dimenDef"
    android:paddingTop="@dimen/dimenDefSmall"
    android:paddingBottom="@dimen/dimenDefSmall">

    <TextView
        android:id="@+id/bt_dev_name"
        style="@style/App.Fast.TextView.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12312331231" />

    <TextView
        android:id="@+id/bt_dev_mac"
        style="@style/App.Fast.TextView.Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimenDefSmall"
        app:layout_constraintStart_toStartOf="@id/bt_dev_name"
        app:layout_constraintTop_toBottomOf="@id/bt_dev_name"
        tools:text="11:31:23:31:23:11" />

    <TextView
        android:id="@+id/bt_dev_rssi"
        style="@style/App.Fast.TextView.Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimenDefSmall"
        app:layout_constraintBottom_toBottomOf="@id/bt_dev_mac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bt_dev_mac"
        tools:text="-11 dbm" />
</androidx.constraintlayout.widget.ConstraintLayout>