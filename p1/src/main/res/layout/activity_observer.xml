<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contentobserver.ObserverActivity"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/observer_btn_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingDef"
        android:text="notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/observer_btn_notification_state"
        style="@style/AppTheme.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingSmall"
        app:layout_constraintBottom_toBottomOf="@id/observer_btn_notification"
        app:layout_constraintStart_toEndOf="@id/observer_btn_notification"
        app:layout_constraintTop_toTopOf="@id/observer_btn_notification"
        tools:text="enable:true" />

    <Button
        android:id="@+id/observer_btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call"
        app:layout_constraintStart_toStartOf="@id/observer_btn_notification"
        app:layout_constraintTop_toBottomOf="@id/observer_btn_notification" />

    <Button
        android:id="@+id/observer_btn_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingDef"
        android:text="SMS"
        app:layout_constraintBottom_toBottomOf="@id/observer_btn_call"
        app:layout_constraintStart_toEndOf="@id/observer_btn_call"
        app:layout_constraintTop_toTopOf="@id/observer_btn_call" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/observer_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/observer_btn_call"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_log_content" />

</androidx.constraintlayout.widget.ConstraintLayout>