<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimenDef"
    android:paddingTop="@dimen/dimenDefSmall"
    android:paddingEnd="@dimen/dimenDef"
    android:paddingBottom="@dimen/dimenDefSmall">

    <TextView
        android:id="@+id/record_content"
        style="@style/App.Fast.TextView.Normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123123123123123123123" />

    <TextView
        android:id="@+id/record_time"
        style="@style/App.Fast.TextView.Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimenDefSmall"
        app:layout_constraintStart_toStartOf="@id/record_content"
        app:layout_constraintTop_toBottomOf="@id/record_content"
        tools:text="2021/01/01 11:11:11" />

    <TextView
        android:id="@+id/record_type"
        style="@style/App.Fast.TextView.Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/record_time"
        tools:text="123" />

    <TextView
        style="@style/App.Fast.TextView.Normal"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:background="#FF3333"
        android:text="DEL"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/record_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>