<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dev"
            type="com.munch.lib.bluetooth.BluetoothDev" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/AppTheme.Clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/paddingDef"
        android:paddingTop="@dimen/paddingSmall"
        android:paddingEnd="@dimen/paddingDef"
        android:paddingBottom="@dimen/paddingSmall">

        <TextView
            android:id="@+id/bt_name"
            style="@style/AppTheme.Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dev.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="BLUETOOTH" />

        <TextView
            style="@style/AppTheme.Overline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paddingSmall"
            app:layout_constraintBottom_toBottomOf="@id/bt_name"
            app:layout_constraintStart_toEndOf="@id/bt_name"
            app:layout_constraintTop_toTopOf="@id/bt_name"
            tools:text="当前已连接, 系统已连接" />

        <TextView
            android:id="@+id/bt_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingSmall"
            android:text="@{dev.mac}"
            app:layout_constraintStart_toStartOf="@id/bt_name"
            app:layout_constraintTop_toBottomOf="@id/bt_name"
            tools:text="12:34:56:78:90:11" />

        <TextView
            android:id="@+id/bt_dbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dev.rssiStr}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bt_mac"
            tools:text="-10 dBm" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>