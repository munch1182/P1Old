<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="config"
            type="com.munch.test.project.one.bluetooth.BluetoothConfigActivity.BtUUIDConfig" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/test_bt_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="@dimen/padding_def"
        tools:context=".bluetooth.BluetoothConfigActivity"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/test_bt_service_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_def"
            android:padding="@dimen/padding_def"
            android:text="Main:"
            app:layout_constraintBottom_toBottomOf="@id/test_bt_service_main_et"
            app:layout_constraintEnd_toStartOf="@id/test_bt_service_main_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/test_bt_service_main_et" />

        <EditText
            android:id="@+id/test_bt_service_main_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:inputType="textNoSuggestions"
            android:padding="@dimen/padding_def"
            app:bind_config_main="@={config}"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/test_bt_service_main"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill,LabelFor" />

        <EditText
            android:id="@+id/test_bt_service_notify_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_def"
            android:gravity="start|top"
            android:inputType="textNoSuggestions"
            android:padding="@dimen/padding_def"
            app:bind_config_notify="@={config}"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/test_bt_service_main_et"
            app:layout_constraintStart_toStartOf="@id/test_bt_service_main_et"
            app:layout_constraintTop_toBottomOf="@id/test_bt_service_main_et"
            tools:ignore="Autofill,LabelFor"
            tools:text="123123" />

        <EditText
            android:id="@+id/test_bt_service_write_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_def"
            android:gravity="start|top"
            android:inputType="textNoSuggestions"
            android:padding="@dimen/padding_def"
            app:bind_config_write="@={config}"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/test_bt_service_notify_et"
            app:layout_constraintStart_toStartOf="@id/test_bt_service_notify_et"
            app:layout_constraintTop_toBottomOf="@id/test_bt_service_notify_et"
            tools:ignore="Autofill,LabelFor"
            tools:text="123123" />

        <EditText
            android:id="@+id/test_bt_service_notify_desc_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_def"
            android:gravity="start|top"
            android:inputType="textNoSuggestions"
            android:padding="@dimen/padding_def"
            app:bind_config_desc="@={config}"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/test_bt_service_write_et"
            app:layout_constraintStart_toStartOf="@id/test_bt_service_write_et"
            app:layout_constraintTop_toBottomOf="@id/test_bt_service_write_et"
            tools:ignore="Autofill,LabelFor"
            tools:text="123123" />

        <TextView
            android:id="@+id/test_bt_service_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_def"
            android:padding="@dimen/padding_def"
            android:text="Notify:"
            app:layout_constraintBottom_toBottomOf="@id/test_bt_service_notify_et"
            app:layout_constraintEnd_toStartOf="@id/test_bt_service_notify_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/test_bt_service_notify_et" />

        <TextView
            android:id="@+id/test_bt_service_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_def"
            android:padding="@dimen/padding_def"
            android:text="Write:"
            app:layout_constraintBottom_toBottomOf="@id/test_bt_service_write_et"
            app:layout_constraintEnd_toStartOf="@id/test_bt_service_write_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/test_bt_service_write_et" />

        <TextView
            android:id="@+id/test_bt_service_notify_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_def"
            android:padding="@dimen/padding_def"
            android:text="Desc:"
            app:layout_constraintBottom_toBottomOf="@id/test_bt_service_notify_desc_et"
            app:layout_constraintEnd_toStartOf="@id/test_bt_service_notify_desc_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/test_bt_service_notify_desc_et" />

        <Button
            android:id="@+id/test_bt_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="确定"
            app:layout_constraintTop_toBottomOf="@id/test_bt_service_notify_desc_et" />

        <Button
            android:id="@+id/test_bt_json"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从JSON文件中读取"
            app:layout_constraintTop_toBottomOf="@id/test_bt_sure" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>