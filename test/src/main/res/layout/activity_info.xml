<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".info.InfoActivity">

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginTop="80dp"
            android:contentDescription="icon"
            app:layout_constraintEnd_toStartOf="@id/info_icon_show"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/info_icon_show"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:contentDescription="icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/info_icon"
            app:layout_constraintTop_toTopOf="@id/info_icon"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/info_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_bigger"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_icon"
            tools:text="nameï¼š123" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>