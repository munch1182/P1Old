<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".net.TestSocketBroadcastAndConnectActivity"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/socket_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_def"
        android:text="start"
        app:layout_constraintEnd_toStartOf="@id/socket_btn_stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/socket_btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        app:layout_constraintBottom_toBottomOf="@id/socket_btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/socket_btn_start"
        app:layout_constraintTop_toTopOf="@id/socket_btn_start" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/socket_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding_def"
        android:background="@color/colorWhite"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/socket_btn_start"
        tools:itemCount="10"
        tools:listitem="@layout/test_simple_item_socket_op" />

</androidx.constraintlayout.widget.ConstraintLayout>