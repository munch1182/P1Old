<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_def"
    tools:context=".alive.TestAliveSimpleActivity">

    <TextView
        android:id="@+id/test_alive_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1234" />

    <Button
        android:id="@+id/test_alive_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试/重新测试"
        app:layout_constraintStart_toStartOf="@id/test_alive_phone"
        app:layout_constraintTop_toBottomOf="@id/test_alive_phone"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/test_alive_btn_auto_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单独测试自启动"
        app:layout_constraintStart_toStartOf="@id/test_alive_btn"
        app:layout_constraintTop_toBottomOf="@id/test_alive_btn"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/test_alive_btn_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看信息"
        app:layout_constraintStart_toStartOf="@id/test_alive_btn"
        app:layout_constraintTop_toBottomOf="@id/test_alive_btn_auto_start"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/test_alive_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/test_alive_btn"
        app:layout_constraintTop_toBottomOf="@id/test_alive_btn_see"
        tools:text="1234" />

</androidx.constraintlayout.widget.ConstraintLayout>