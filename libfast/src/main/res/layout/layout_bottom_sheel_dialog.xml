<?xml version="1.0" encoding="utf-8"?>
<com.munch.lib.weight.CornerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:color="@color/white"
    android:paddingTop="@dimen/paddingSmall"
    android:paddingBottom="@dimen/paddingSmall"
    app:tlRadius="@dimen/radiusDef"
    app:trRadius="@dimen/radiusDef"
    tools:color="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/paddingSmall">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/AppTheme.Text.Bigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingDef"
            android:paddingTop="@dimen/paddingSmall"
            android:paddingEnd="@dimen/paddingDef"
            android:paddingBottom="@dimen/paddingSmall"
            android:textColor="@color/black"
            tools:text="123" />
    </LinearLayout>
</com.munch.lib.weight.CornerLayout>