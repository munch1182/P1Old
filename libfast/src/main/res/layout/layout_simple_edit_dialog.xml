<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingDef"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/simple_edit_title"
        style="@style/AppTheme.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingSmall"
        android:text="请输入"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/simple_edit_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/paddingSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simple_edit_title"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:id="@+id/simple_edit_sure"
        style="@style/AppTheme.Clickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/paddingSmall"
        android:padding="@dimen/paddingSmall"
        android:text="确定"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simple_edit_et" />

    <TextView
        android:id="@+id/simple_edit_cancel"
        style="@style/AppTheme.Clickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/paddingSmall"
        android:padding="@dimen/paddingSmall"
        android:text="取消"
        app:layout_constraintEnd_toStartOf="@id/simple_edit_sure"
        app:layout_constraintTop_toBottomOf="@id/simple_edit_et" />

</androidx.constraintlayout.widget.ConstraintLayout>