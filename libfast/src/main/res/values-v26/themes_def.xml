<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Fast.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/spDefNormal</item>
        <item name="android:autoSizeMinTextSize">8sp</item>
    </style>

    <style name="App.Fast.Check" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingTop">@dimen/dimenDefSmall</item>
        <item name="android:paddingBottom">@dimen/dimenDefSmall</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/spDefNormal</item>
        <item name="android:autoSizeMinTextSize">8sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/spDefNormal</item>
        <item name="android:textColor">@color/colorTextDef</item>
    </style>
</resources>