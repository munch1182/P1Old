<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="colorPrimary">#00b0ff</color>
    <color name="colorPrimaryVariant">#0081cb</color>
    <color name="colorSecondary">#00b8d4</color>
    <color name="colorSecondaryVariant">#0088a3</color>
    <color name="white">#fff</color>
    <color name="black">#000</color>
    <color name="gray">#dfdfdf</color>

    <style name="AppTheme" />

    <!--不会受到AppTheme影响，能被同名样式覆盖-->
    <style name="AppTheme.Text.Big" parent="TextAppearance.MaterialComponents.Headline5" />

    <style name="AppTheme.Text.Title" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="AppTheme.Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2" />

    <style name="AppTheme.Text.Bigger" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="AppTheme.Text" parent="TextAppearance.MaterialComponents.Body2" />

    <!--显示文字和填充色的button样式-->
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button" />

    <!--只显示文字的button样式-->
    <style name="AppTheme.Button.Text" parent="Widget.MaterialComponents.Button.TextButton" />

    <!--显示文字和边框线的button样式-->
    <style name="AppTheme.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="AppTheme.Caption" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="AppTheme.Overline" parent="TextAppearance.MaterialComponents.Overline" />

    <style name="AppTheme.Split">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="AppTheme.Split.Margin">
        <item name="android:layout_marginStart">@dimen/paddingDef</item>
        <item name="android:layout_marginEnd">@dimen/paddingDef</item>
    </style>

    <dimen name="paddingDef">16dp</dimen>
    <dimen name="paddingSmall">8dp</dimen>
    <dimen name="radiusDef">8dp</dimen>

    <style name="AppTheme.Clickable" parent="Theme.MaterialComponents">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.WhitColorPrimary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fff</item>
    </style>

    <!--背景透明的BottomSheetDialog-->
    <style name="AppTheme.BottomDialog.Trans" parent="Theme.MaterialComponents.BottomSheetDialog">
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否去除标题 -->
        <item name="windowNoTitle">true</item>
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--背景透明的BottomSheetDialog-->
    <style name="AppTheme.CenterDialog.Trans" parent="Theme.MaterialComponents.Dialog.Alert">
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否去除标题 -->
        <item name="windowNoTitle">true</item>
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--页面切换translate动画-->
    <style name="ActivityTranslateAnim">
        <!--startActivity-->
        <item name="android:activityOpenEnterAnimation">@anim/anim_open_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_open_out</item>
        <!--finishActivity-->
        <item name="android:activityCloseEnterAnimation">@anim/anim_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_close_out</item>
    </style>

    <style name="ActivityAlphaAnim">
        <item name="android:activityOpenEnterAnimation">@anim/anim_mask_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_mask_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_mask_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_mask_out</item>
    </style>
</resources>