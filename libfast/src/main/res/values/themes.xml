<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--引用错误可尝试重启as-->

    <style name="App.Fast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fastAttrTvNormal">@style/App.Fast.TextView.Normal</item>
        <item name="fastAttrTvLine">@style/App.Fast.TextView.Normal.Line</item>
        <item name="fastAttrTvDesc">@style/App.Fast.TextView.Desc</item>
        <item name="fastAttrLinearLayout">@style/App.Fast.LinearLayout.Vertical</item>
        <item name="fastAttrSpaceHorizontal">@style/App.Fast.Horizontal</item>
        <item name="fastAttrSpaceVertical">@style/App.Fast.Vertical</item>
        <item name="fastAttrPadding">@style/App.Fast.Padding</item>
    </style>

    <attr name="fastAttrTvNormal" format="reference" />
    <attr name="fastAttrTvLine" format="reference" />
    <attr name="fastAttrTvDesc" format="reference" />
    <attr name="fastAttrLinearLayout" format="reference" />
    <attr name="fastAttrSpaceHorizontal" format="reference" />
    <attr name="fastAttrSpaceVertical" format="reference" />
    <attr name="fastAttrPadding" format="reference" />

    <!--设置左右dimenDef，上下dimenDefSmall的padding-->
    <style name="App.Fast.Padding">
        <item name="android:paddingStart">@dimen/dimenDef</item>
        <item name="android:paddingEnd">@dimen/dimenDef</item>
        <item name="android:paddingTop">@dimen/dimenDefSmall</item>
        <item name="android:paddingBottom">@dimen/dimenDefSmall</item>
    </style>

    <!--基类text，设置ww-->
    <style name="App.Fast.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--一般用TextView-->
    <style name="App.Fast.TextView.Normal">
        <item name="android:textSize">@dimen/spDefText</item>
        <item name="android:textColor">@color/colorTextDef</item>
    </style>

    <!--占据整行的TextView，设置了默认padding、白色背景和点击效果-->
    <style name="App.Fast.TextView.Normal.Line">
        <item name="android:textSize">@dimen/spDefText</item>
        <item name="android:textColor">@color/colorTextDef</item>
        <item name="android:paddingStart">@dimen/dimenDef</item>
        <item name="android:paddingEnd">@dimen/dimenDef</item>
        <item name="android:paddingTop">@dimen/dimenDefSmall</item>
        <item name="android:paddingBottom">@dimen/dimenDefSmall</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!--用于描述性的TextView-->
    <style name="App.Fast.TextView.Desc">
        <item name="android:textSize">@dimen/spDefDesc</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <!--一行的LinearLayout，设置了默认padding、白色背景和点击效果-->
    <style name="App.Fast.LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/dimenDef</item>
        <item name="android:paddingEnd">@dimen/dimenDef</item>
        <item name="android:paddingTop">@dimen/dimenDefSmall</item>
        <item name="android:paddingBottom">@dimen/dimenDefSmall</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="App.Fast.LinearLayout.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="App.Fast.LinearLayout.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="App.Fast.Space">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.Fast.Vertical">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="App.Fast.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>