<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--引用错误可尝试重启as-->

    <style name="App.Fast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fastAttrTvNormal">@style/App.Fast.TextView.Normal</item>
        <item name="fastAttrTvLine">@style/App.Fast.TextView.Normal.Line</item>
        <item name="fastAttrLine">@style/App.Fast.Line</item>
        <item name="fastAttrTvDesc">@style/App.Fast.TextView.Desc</item>
        <item name="fastAttrLineVertical">@style/App.Fast.Vertical</item>
        <item name="fastAttrLineHorizontal">@style/App.Fast.Horizontal</item>
        <item name="fastAttrSpaceHorizontal">@style/App.Fast.Space.Horizontal</item>
        <item name="fastAttrSpaceVertical">@style/App.Fast.Space.Vertical</item>
        <item name="fastAttrPadding">@style/App.Fast.PaddingRect</item>
        <item name="fastAttrContainer">@style/App.Fast.PaddingFull</item>
        <item name="fastAttrCheck">@style/App.Fast.Check</item>
        <item name="android:windowBackground">@color/colorBg</item>
    </style>

    <attr name="fastAttrTvNormal" format="reference" />
    <attr name="fastAttrLine" format="reference" />
    <attr name="fastAttrTvLine" format="reference" />
    <attr name="fastAttrTvDesc" format="reference" />
    <attr name="fastAttrLineVertical" format="reference" />
    <attr name="fastAttrLineHorizontal" format="reference" />
    <attr name="fastAttrSpaceHorizontal" format="reference" />
    <attr name="fastAttrSpaceVertical" format="reference" />
    <attr name="fastAttrPadding" format="reference" />
    <attr name="fastAttrContainer" format="reference" />
    <attr name="fastAttrBtn" format="reference" />
    <attr name="fastAttrCheck" format="reference" />

    <!--设置左右dimenDef，上下dimenDefSmall的padding-->
    <style name="App.Fast.PaddingRect">
        <item name="android:paddingStart">@dimen/dimenDef</item>
        <item name="android:paddingEnd">@dimen/dimenDef</item>
        <item name="android:paddingTop">@dimen/dimenDefSmall</item>
        <item name="android:paddingBottom">@dimen/dimenDefSmall</item>
    </style>

    <style name="App.Fast.PaddingFull">
        <item name="android:padding">@dimen/dimenDef</item>
    </style>

    <!--基类text，设置ww-->
    <style name="App.Fast.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.Fast.Check" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingTop">@dimen/dimenDefSmall</item>
        <item name="android:paddingBottom">@dimen/dimenDefSmall</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--一般用TextView-->
    <style name="App.Fast.TextView.Normal">
        <item name="android:textSize">@dimen/spDefNormal</item>
        <item name="android:textColor">@color/colorTextDef</item>
    </style>

    <style name="App.Fast.TextView.Normal.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Fast.TextView.Normal.Line" parent="App.Fast.Line">
        <item name="android:textSize">@dimen/spDefNormal</item>
        <item name="android:textColor">@color/colorTextDef</item>
    </style>


    <!--占据整行，设置了默认padding、白色背景和点击效果-->
    <style name="App.Fast.Line" parent="App.Fast.PaddingFull">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!--用于描述性的TextView-->
    <style name="App.Fast.TextView.Desc">
        <item name="android:textSize">@dimen/spDefDesc</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <style name="App.Fast.Vertical" parent="App.Fast.Line">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="App.Fast.Horizontal" parent="App.Fast.Line">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="App.Fast.Space">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.Fast.Space.Vertical">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="App.Fast.Space.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="App.Fast.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/colorTran</item>
        <item name="android:windowBackground">@color/colorTran</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <!--内容背景透明的BottomSheetDialog-->
    <style name="App.Fast.Dialog.Bottom" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StyleDialogBottomSheet</item>
    </style>

    <style name="StyleDialogBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowBackground">@color/colorTran</item>
    </style>

    <style name="StyleLineSplit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="App.Fast.EditText" parent="App.Fast.TextView.Normal">
        <item name="android:background">@drawable/select_radius_8_stroke</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">@dimen/dimenDefSmall</item>
        <item name="android:paddingBottom">@dimen/dimenDefSmall</item>
    </style>
</resources>