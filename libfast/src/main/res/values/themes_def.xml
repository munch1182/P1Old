<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--引用错误可尝试重启as-->

    <style name="App.Fast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/colorTran</item>
        <!--Theme所有attr必须使用-->
        <item name="fastAttrText">@style/App.Fast.Text</item>
        <item name="fastAttrTextTitle">@style/App.Fast.Text.Title</item>
        <item name="colorBg">@color/colorBg</item>
        <item name="android:windowBackground">@color/colorBg</item>
    </style>

    <attr name="colorBg" format="reference" />
    <attr name="fastAttrText" format="reference" />
    <attr name="fastAttrTextTitle" format="reference" />

    <style name="App.Fast.Text">
        <item name="android:textSize">@dimen/spDefNormal</item>
        <item name="android:textColor">@color/colorTextDef</item>
    </style>

    <style name="App.Fast.Text.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="App.Fast.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/colorTran</item>
        <item name="android:windowBackground">@color/colorTran</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <!--内容背景透明的BottomSheetDialog-->
    <style name="App.Fast.Dialog.Bottom" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StyleDialogBottomSheet</item>
    </style>

    <style name="StyleDialogBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowBackground">@color/colorTran</item>
    </style>
</resources>